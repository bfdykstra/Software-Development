			if (state == Constants.STATE_GENERATING)
			{
				//notifyViewerRedraw() ;
				
				genAct.getProgressBarHandler().post(new Runnable() {public void run() {
					  genAct.getProgressBar().setProgress(percentdone);
					  genAct.setText(percentdone);
					  //if(percentdone == 99){

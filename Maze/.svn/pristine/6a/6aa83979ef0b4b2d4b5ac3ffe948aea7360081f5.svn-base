package falstad;

import falstad.Robot.Turn;

/**
 * A Driver that operates on a Robot
 * @author Benjamin Dykstra
 *
 */
public class ManualDriver implements RobotDriver {
	
	Robot robot;
	int width;
	int height;
	Distance distance;
	int numSteps = 0;
	

	public ManualDriver() {
		
	}

	@Override
	public void setRobot(Robot r) {
		this.robot = r;
	}

	@Override
	public void setDimensions(int width, int height) {
		this.width = width;
		this.height = height;
	}

	@Override
	public void setDistance(Distance distance) {
		this.distance = distance;
	}

	@Override
	public boolean drive2Exit() throws Exception {
		return false;
	}

	@Override
	public float getEnergyConsumption() {
		float consumption = 2500 - robot.getBatteryLevel();
		return consumption;
	}

	@Override
	public int getPathLength() {
		int numSteps = this.numSteps;
		return numSteps;
	}
	
	/**
	 * called in SimpleKeyListener of maze for certain keys, only the arrow keys specifically
	 */
	protected void passToRobot(int key){
		//System.out.println("In passToRobot, using this key: " + key);
		switch(key){
		case 104:
			try {
				robot.rotate(Turn.LEFT);
			} catch (Exception e) {
				e.printStackTrace();
			}
			break;
		case 108:
			try {
				robot.rotate(Turn.RIGHT);
			} catch (Exception e) {
				e.printStackTrace();
			}
			break;
		case 107:
			try {
				robot.move(1);
			
			} catch (Exception e) {
				e.printStackTrace();
			}
			break;
		case 106:
			try{
				robot.rotate(Turn.AROUND);
				robot.move(1);
			} catch(Exception e){
				e.printStackTrace();
			}
			break;
		}
	}

}
